<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:label="Motouber"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:resizeableActivity="true"
        android:supportsRtl="true">

        <!-- Samsung Multi-Window Library (opcional) -->
        <uses-library 
            android:name="com.sec.android.app.multiwindow" 
            android:required="false" />

        <!-- Suporte Multi-Window Samsung -->
        <meta-data 
            android:name="com.sec.android.support.multiwindow" 
            android:value="true" />
        
        <!-- Suporte Multi-Instance Samsung -->
        <meta-data 
            android:name="com.samsung.android.sdk.multiwindow.multiinstance.enable" 
            android:value="true" />
        
        <!-- Suporte PenWindow Samsung -->
        <meta-data 
            android:name="com.samsung.android.sdk.multiwindow.penwindow.enable" 
            android:value="true" />
        
        <!-- Suporte Freeform Mode (Xiaomi, Oppo, etc) -->
        <meta-data 
            android:name="android.allow_multiple_resumed_activities" 
            android:value="true" />
        
        <!-- Suporte MIUI Floating Windows -->
        <meta-data 
            android:name="android.max_aspect" 
            android:value="2.4" />
        
        <meta-data 
            android:name="notch.config" 
            android:value="portrait|landscape" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="true"
            android:documentLaunchMode="always"
            android:persistableMode="persistNever"
            android:screenOrientation="unspecified">

            <layout
                android:minWidth="300dp"
                android:minHeight="450dp"
                android:defaultWidth="600dp"
                android:defaultHeight="800dp"
                android:gravity="top|end" />

            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme" />

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER"/>
                <category android:name="android.intent.category.APP_MARKET"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
        
        <!-- Ensure Android Embedding v2 is properly configured -->
        <meta-data
            android:name="io.flutter.embedding.android.EnableSplashScreen"
            android:value="false" />
    </application>
</manifest>